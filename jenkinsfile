pipeline {
    agent any

    stages {
       stage('Checkout projeto') {
            steps {
                git url:'https://github.com/fspelling/pedelogo-catalogo',
                branch: 'main'
            }
        }

        stage('Build image') {
            steps {
                script {
                    def tag = env.BUILD_ID
                    dockerapp = docker.build("fspelling/api-produto:${tag}", "-f ./src/PedeLogo.Catalogo.Api/Dockerfile .")
                }
            }
        }

        stage('Push image') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
                        dockerapp.push('latest')
                        dockerapp.push("${tag}")
                    }
                }
            }
        }

        stage('Deploy k8s') {
            agent {
                kubernetes {
                    cloud 'kubernetes'
                }
            }
            steps {
                script {
                    sh 'sed -i "s/{{tag}}/${env.BUILD_ID}/g" ./k8s/api/deployment.yaml'
                    sh 'cat ./k8s/api/deployment.yaml'
                    kubernetesDeploy(configs: '**/k8s/**', kubeconfigId: 'kubeconfig')
                }
            }
        }
    }

}
